@model IEnumerable<TituloApp.Models.titulos>

@{
    ViewBag.Title = "Lista de Titulos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar um Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_emissao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.situacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_emissao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.situacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.titulo_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.titulo_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.titulo_id })
        </td>
    </tr>
}

</table>
